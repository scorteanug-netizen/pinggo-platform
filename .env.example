# Database (can be overridden in .env.local, recommended for Supabase)
DATABASE_URL="postgresql://pinggo:pinggo_local@localhost:5432/pinggo_platform"

# Supabase Auth
SUPABASE_URL="https://<project-ref>.supabase.co"
SUPABASE_ANON_KEY="<anon-key>"
SUPABASE_SERVICE_ROLE_KEY="<service-role-key>"
PINGGO_SUPER_ADMIN_EMAILS="admin@pinggo.io"
PINGGO_WEBHOOK_TOKEN_SECRET="<webhook-hmac-secret>"

# NextAuth
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Resend (magic link email)
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="Pinggo <onboarding@resend.dev>"

# Demo mode auth bypass
PINGGO_BYPASS_AUTH="true"
PINGGO_DEMO_USER_EMAIL="demo@pinggo.io"

# OpenAI (for AI autopilot mode)
OPENAI_API_KEY=
OPENAI_MODEL="gpt-4.1-mini"

# Twilio WhatsApp (optional; if missing, stub provider is used for local/dev)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
# TWILIO_WHATSAPP_SANDBOX_TO=whatsapp:+<your-phone-international>  # Optional, for sandbox join

# Twilio inbound webhook (required for WhatsApp Sandbox "WHEN A MESSAGE COMES IN")
TWILIO_DEFAULT_WORKSPACE_ID=
# TWILIO_WEBHOOK_SECRET=  # Optional; falls back to TWILIO_AUTH_TOKEN for signature verification
