generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MembershipRole {
  OWNER
  ADMIN
  MANAGER
  AGENT
}

enum MembershipStatus {
  INVITED
  ACTIVE
  DISABLED
}

enum UserGlobalRole {
  USER
  SUPER_ADMIN
}

enum LeadStatus {
  NEW
  OPEN
  WON
  LOST
  QUALIFIED
  NOT_QUALIFIED
  SPAM
  ARCHIVED
}

enum LeadSourceType {
  WEBHOOK
  FORM
  CRM
  WHATSAPP
  API
  MANUAL
  IMPORT
  EMAIL
}

enum ProofChannel {
  WHATSAPP
  EMAIL
  SMS
  CALL
  MANUAL
}

enum ProofType {
  SENT
  DELIVERED
  READ
  REPLIED
  BOOKED
  MANUAL_CONFIRMED
  INBOUND
}

enum SLAStageInstanceStatus {
  RUNNING
  STOPPED
  BREACHED
}

enum AutopilotRunStatus {
  ACTIVE
  COMPLETED
  HANDED_OVER
  FAILED
}

enum OutboundChannel {
  WHATSAPP
}

enum OutboundMessageStatus {
  QUEUED
  SENT
  FAILED
}

enum AutopilotScenarioType {
  QUALIFY_ONLY
  QUALIFY_AND_BOOK
}

enum AutopilotScenarioMode {
  RULES
  AI
}

model Workspace {
  id            String             @id @default(cuid())
  name          String
  createdAt     DateTime           @default(now())
  disabledAt    DateTime?
  memberships   Membership[]
  leads         Lead[]
  leadEvents    LeadEvent[]
  flows         Flow[]
  slaStages     SLAStageInstance[]
  notifications Notification[]
  integrations  Integration[]
  autopilotRuns      AutopilotRun[]
  autopilotScenarios AutopilotScenario[]
  outboundMessages   OutboundMessage[]
  settings           WorkspaceSettings?

  @@index([disabledAt])
}

model User {
  id             String         @id @default(cuid())
  email          String         @unique
  name           String?
  globalRole     UserGlobalRole @default(USER)
  supabaseUserId String?        @unique
  createdAt      DateTime       @default(now())
  memberships    Membership[]
  ownedLeads     Lead[]         @relation("LeadOwner")
  leadEvents     LeadEvent[]    @relation("LeadEventActor")
  editedFlows    Flow[]               @relation("FlowLastEditor")
  notifications  Notification[]
  handoverScenarios AutopilotScenario[] @relation("ScenarioHandoverUser")

  accounts Account[]
  sessions Session[]
}

model Membership {
  userId      String
  workspaceId String
  role        MembershipRole
  status      MembershipStatus @default(ACTIVE)
  invitedAt   DateTime?
  acceptedAt  DateTime?
  disabledAt  DateTime?
  createdAt   DateTime         @default(now())
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace        @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@id([userId, workspaceId])
  @@index([workspaceId])
  @@index([userId])
  @@index([workspaceId, status])
  @@index([userId, status])
}

model Lead {
  id                String             @id @default(uuid())
  workspaceId       String
  firstName         String?
  lastName          String?
  email             String?
  phone             String?
  source            String?
  sourceType        LeadSourceType
  externalId        String?
  status            LeadStatus         @default(NEW)
  ownerId           String?
  ownerUserId       String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  workspace         Workspace          @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  ownerUser         User?              @relation("LeadOwner", fields: [ownerUserId], references: [id], onDelete: SetNull)
  identity          LeadIdentity?
  slaState          SLAState?
  proofEvents       ProofEvent[]
  eventLogs         EventLog[]
  autopilotRun      AutopilotRun?
  outboundMessages  OutboundMessage[]
  events            LeadEvent[]
  slaStageInstances SLAStageInstance[]
  bookings          Booking[]

  @@unique([workspaceId, sourceType, externalId])
  @@index([workspaceId, createdAt])
  @@index([ownerUserId])
  @@index([status])
}

model SLAState {
  id         String    @id @default(uuid())
  leadId     String    @unique
  startedAt  DateTime
  deadlineAt DateTime
  stoppedAt  DateTime?
  stopReason String?
  breachedAt DateTime?
  lead       Lead      @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([deadlineAt])
}

model ProofEvent {
  id                String       @id @default(uuid())
  leadId            String
  channel           ProofChannel
  provider          String
  providerMessageId String?
  type              ProofType
  occurredAt        DateTime
  isManual          Boolean      @default(false)
  createdAt         DateTime     @default(now())
  lead              Lead         @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([leadId, occurredAt])
  @@index([providerMessageId])
  @@unique([leadId, providerMessageId, type, channel])
}

model EventLog {
  id          String   @id @default(uuid())
  leadId      String
  actorUserId String?
  eventType   String
  payload     Json
  occurredAt  DateTime @default(now())
  lead        Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([leadId, occurredAt])
  @@index([actorUserId])
}

model AutopilotScenario {
  id                 String                 @id @default(uuid())
  workspaceId        String
  name               String
  scenarioType       AutopilotScenarioType  @default(QUALIFY_ONLY)
  mode               AutopilotScenarioMode  @default(RULES)
  aiPrompt           String?
  slaMinutes         Int                    @default(15)
  maxQuestions        Int                    @default(2)
  handoverUserId     String?
  bookingConfigJson  Json?
  isDefault          Boolean                @default(false)

  // Company & agent context (used as variables in AI prompt)
  agentName          String?
  companyName        String?
  companyDescription String?
  offerSummary       String?
  calendarLinkRaw    String?
  language           String                 @default("ro")
  tone               String?
  knowledgeBaseJson  Json?

  createdAt          DateTime               @default(now())
  updatedAt          DateTime               @updatedAt
  workspace          Workspace              @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  handoverUser       User?                  @relation("ScenarioHandoverUser", fields: [handoverUserId], references: [id], onDelete: SetNull)
  autopilotRuns      AutopilotRun[]

  @@index([workspaceId])
  @@index([workspaceId, isDefault])
  @@index([handoverUserId])
}

model AutopilotRun {
  id              String              @id @default(uuid())
  leadId          String              @unique
  workspaceId     String
  scenarioId      String?
  status          AutopilotRunStatus  @default(ACTIVE)
  currentStep     String              @default("welcome")
  stateJson       Json?
  lastInboundAt   DateTime?
  lastOutboundAt  DateTime?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  lead            Lead                @relation(fields: [leadId], references: [id], onDelete: Cascade)
  workspace       Workspace           @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  scenario        AutopilotScenario?  @relation(fields: [scenarioId], references: [id], onDelete: Restrict)

  @@index([workspaceId, status])
  @@index([scenarioId])
}

model OutboundMessage {
  id                String                @id @default(uuid())
  leadId            String
  workspaceId       String
  channel           OutboundChannel       @default(WHATSAPP)
  toPhone           String?
  text              String
  provider          String?
  providerMessageId String?
  status            OutboundMessageStatus @default(QUEUED)
  createdAt         DateTime              @default(now())
  sentAt            DateTime?
  lead              Lead                  @relation(fields: [leadId], references: [id], onDelete: Cascade)
  workspace         Workspace             @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([leadId, createdAt])
  @@index([workspaceId, status, createdAt])
}

model IdempotencyKey {
  id          String   @id @default(uuid())
  workspaceId String
  key         String
  requestHash String
  responseJson Json?
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([workspaceId, key])
}

model LeadIdentity {
  leadId  String  @id
  name    String?
  email   String?
  phone   String?
  company String?
  meta    Json?
  lead    Lead    @relation(fields: [leadId], references: [id], onDelete: Cascade)
}

model LeadEvent {
  id                  String             @id @default(cuid())
  workspaceId         String
  leadId              String
  type                String
  payload             Json?
  createdAt           DateTime           @default(now())
  actorUserId         String?
  workspace           Workspace          @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  lead                Lead               @relation(fields: [leadId], references: [id], onDelete: Cascade)
  actorUser           User?              @relation("LeadEventActor", fields: [actorUserId], references: [id], onDelete: SetNull)
  proofStageInstances SLAStageInstance[] @relation("ProofEventToStage")

  @@index([workspaceId, createdAt])
  @@index([leadId, createdAt])
  @@index([actorUserId])
}

model Flow {
  id                  String               @id @default(cuid())
  workspaceId         String
  name                String
  isActive            Boolean              @default(false)
  publishedAt         DateTime?
  lastEditedByUserId  String?
  config              Json?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  workspace           Workspace            @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  lastEditedByUser    User?                @relation("FlowLastEditor", fields: [lastEditedByUserId], references: [id], onDelete: SetNull)
  slaStageDefinitions SLAStageDefinition[]
  slaStageInstances   SLAStageInstance[]
  escalationRules     EscalationRule[]
  defaultForSettings  WorkspaceSettings[]  @relation("DefaultFlow")

  @@index([workspaceId])
  @@index([workspaceId, isActive])
  @@index([workspaceId, publishedAt])
  @@index([lastEditedByUserId])
}

model WorkspaceSettings {
  workspaceId          String    @id
  businessHoursEnabled Boolean   @default(true)
  timezone             String    @default("Europe/Bucharest")
  schedule             Json?
  defaultFlowId        String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  workspace            Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  defaultFlow          Flow?     @relation("DefaultFlow", fields: [defaultFlowId], references: [id], onDelete: SetNull)

  @@index([defaultFlowId])
}

model SLAStageDefinition {
  id                   String  @id @default(cuid())
  flowId               String
  key                  String
  name                 String
  targetMinutes        Int
  businessHoursEnabled Boolean @default(false)
  stopOnProofTypes     Json?
  flow                 Flow    @relation(fields: [flowId], references: [id], onDelete: Cascade)

  @@unique([flowId, key])
  @@index([flowId])
}

model SLAStageInstance {
  id           String                 @id @default(cuid())
  workspaceId  String
  leadId       String
  flowId       String
  stageKey     String
  startedAt    DateTime
  dueAt        DateTime
  stoppedAt    DateTime?
  breachedAt   DateTime?
  status       SLAStageInstanceStatus @default(RUNNING)
  stopReason   String?
  proofEventId String?
  workspace    Workspace              @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  lead         Lead                   @relation(fields: [leadId], references: [id], onDelete: Cascade)
  flow         Flow                   @relation(fields: [flowId], references: [id], onDelete: Cascade)
  proofEvent   LeadEvent?             @relation("ProofEventToStage", fields: [proofEventId], references: [id], onDelete: SetNull)

  @@index([workspaceId, status, dueAt])
  @@index([leadId, status, dueAt])
  @@index([flowId, stageKey])
  @@index([proofEventId])
}

model EscalationRule {
  id                String  @id @default(cuid())
  flowId            String
  stageKey          String
  remindAtPct       Int
  reassignAtPct     Int
  managerAlertAtPct Int
  enabled           Boolean @default(true)
  flow              Flow    @relation(fields: [flowId], references: [id], onDelete: Cascade)

  @@unique([flowId, stageKey])
  @@index([flowId])
}

model Notification {
  id          String    @id @default(cuid())
  workspaceId String
  userId      String?
  type        String
  title       String
  body        String
  readAt      DateTime?
  createdAt   DateTime  @default(now())
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User?     @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([workspaceId, createdAt])
  @@index([userId, readAt])
}

model Booking {
  id        String    @id @default(cuid())
  leadId    String
  provider  String
  eventId   String?
  startAt   DateTime?
  endAt     DateTime?
  meetLink  String?
  createdAt DateTime  @default(now())
  lead      Lead      @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([leadId])
}

model Integration {
  id          String    @id @default(cuid())
  workspaceId String
  type        String
  config      Json?
  createdAt   DateTime  @default(now())
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, type])
  @@index([workspaceId])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}
